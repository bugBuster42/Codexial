{% extends 'base.html.twig' %}
{% block stylesheets %}
	{{ parent() }}
	{{ encore_entry_link_tags('home_seller') }}
{% endblock %}
{% block title %}Accueil vendeur
{% endblock %}

{% block body %}
	<section class="vh-100">
		<div class="container py-5 h-100">
			<div class="row d-flex justify-content-center align-items-center h-100">
				<div class="col col-xl-10">
					<div class="card" style="border-radius: 1rem;">
						<div class="row g-0">
							<div class="col-md-6 col-lg-5 d-none d-md-block"><img src="{{ asset('build/images/codexHomeSeller.jpg') }}" alt="login" class="img-fluid"/></div>
							<div class="col-md-6 col-lg-7 d-flex flex-column justify-content-between">
								<div class="nameConnexion">
									<h6>Connecté(e) en tant que
										{{ seller.firstname }}
										{{ seller.lastname }}!</h6>
									<form action="{{ path('app_logout') }}" method="post">
										<button type="submit" class="btn btn-logout">Déconnexion</button>
									</form>
								</div>
								<div class="d-flex flex-column align-items-center custom-height">
									<a href="{{ path('app_newSale') }}" class="btn btn-form">Nouvelle Vente</a>
									<a href="{{ path('app_sales_archive') }}" class="btn btn-form">Archives Ventes</a>
									<a href="{{ path('app_invoice') }}" class="btn btn-form">Facture</a>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</section>

{% endblock %}
